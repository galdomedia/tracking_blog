%section#post
  %article{:id=>"page_#{@page.id}", :class=>"single_page"}
    %header
      %h2
        = @page.title
    %p
      = raw @page.body
    %footer
      - if admin_signed_in?
        %p
          = link_to "Edit", edit_page_path(@page)
          |
          = link_to "Destroy", @page, :confirm => 'Are you sure?', :method => :delete
          |
          = link_to "View All", pages_path
